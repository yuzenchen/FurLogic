// --- 2. é‚è¼¯é‹ç®—å¼•æ“ (Business Logic) ---

// è¨ˆç®— RER (Resting Energy Requirement)
const calculateRER = (weight) => {
  return Math.round(70 * Math.pow(weight, 0.75));
};

// è¨ˆç®— DER (Daily Energy Requirement)
const calculateDER = (rer, factor) => {
  return Math.round(rer * factor);
};

// éˆ£ç£·æ¯”æª¢æŸ¥å™¨
const analyzeCaPRatio = (totalCa, totalP) => {
  if (totalP === 0) return { ratio: 0, status: 'unknown', advice: '' };
  const ratio = totalCa / totalP;
  // ç†æƒ³æ¯”ä¾‹ç´„ 1:1 ~ 1.5:1
  if (ratio < 1.0) {
    return { 
      ratio: ratio.toFixed(2), 
      status: 'low', 
      advice: `ç¼ºéˆ£è­¦å‘Š (1:${(1/ratio).toFixed(1)})ã€‚è‚‰é¡ç£·å«é‡é«˜ï¼Œå‹™å¿…æ·»åŠ éˆ£ç²‰æˆ–è›‹æ®¼ç²‰å¹³è¡¡ã€‚` 
    };
  } else if (ratio > 2.0) {
    return { 
      ratio: ratio.toFixed(2), 
      status: 'high', 
      advice: `éˆ£è³ªéé«˜ (1:${ratio.toFixed(1)})ã€‚è«‹æ¸›å°‘éª¨é ­æˆ–éˆ£ç²‰æ”å–ã€‚` 
    };
  }
  return { 
    ratio: ratio.toFixed(2), 
    status: 'good', 
    advice: 'éˆ£ç£·æ¯”å®Œç¾ï¼' 
  };
};

export default function FurLogicApp() {
  const [activeTab, setActiveTab] = useState('home');
  const [showSettings, setShowSettings] = useState(false);
  
  // --- ä½¿ç”¨è€…è¨­å®š State (å¯ç·¨è¼¯) ---
  const [petProfile, setPetProfile] = useState({
    name: 'Mochi',
    weight: 12,
    isNeutered: true,
    activityLevel: 'normal' // low, normal, high
  });

  // --- å³æ™‚è¨ˆç®—ç†±é‡éœ€æ±‚ ---
  const rer = useMemo(() => calculateRER(petProfile.weight), [petProfile.weight]);
  const factor = useMemo(() => {
    let base = petProfile.isNeutered ? 1.6 : 1.8;
    if (petProfile.activityLevel === 'low') base -= 0.2;
    if (petProfile.activityLevel === 'high') base += 0.4;
    return base;
  }, [petProfile]);
  const der = calculateDER(rer, factor);
  const waterNeed = Math.round(petProfile.weight * 60);

  // --- æœå°‹åŠŸèƒ½ State ---
  const [searchTerm, setSearchTerm] = useState('');
  
  // --- å»šæˆ¿åŠŸèƒ½ State ---
  const [selectedIngredients, setSelectedIngredients] = useState([]);
  const [recipeResult, setRecipeResult] = useState(null);
  const [isCalculating, setIsCalculating] = useState(false);

  // --- Handlers ---
  
  const handleProfileUpdate = (e) => {
    const { name, value, type, checked } = e.target;
    setPetProfile(prev => ({
      ...prev,
      [name]: type === 'checkbox' ? checked : (type === 'number' ? parseFloat(value) : value)
    }));
  };

  const toggleIngredient = (item) => {
    if (selectedIngredients.find(i => i.id === item.id)) {
      setSelectedIngredients(prev => prev.filter(i => i.id !== item.id));
    } else {
      setSelectedIngredients(prev => [...prev, item]);
    }
  };

  const generateRecipe = () => {
    if (selectedIngredients.length === 0) return;
    setIsCalculating(true);

    // æ¨¡æ“¬é‹ç®—å»¶é²
    setTimeout(() => {
      // 1. ç°¡å–®åˆ†é…é‡é‡ (å‡è¨­è‚‰é¡ä½” 60%, è”¬èœ 40% ç‚ºåŸºåº•ä¾†åˆ†é…ä»Šæ—¥ä¸€é¤ç†±é‡)
      // é€™è£¡æ˜¯ä¸€å€‹ç°¡åŒ–çš„æ¼”ç®—æ³•ï¼ŒçœŸå¯¦æƒ…æ³æœƒæ›´è¤‡é›œ
      const mealCalories = Math.round(der / 2); // ä¸€é¤
      
      const proteins = selectedIngredients.filter(i => i.type === 'protein');
      const vegs = selectedIngredients.filter(i => i.type !== 'protein');
      
      let recipeItems = [];
      let totalCa = 0;
      let totalP = 0;
      let totalProtein = 0;
      let totalFat = 0;

      // åˆ†é…é‚è¼¯ï¼šå¦‚æœæœ‰è‚‰ï¼Œè‚‰æ‹¿èµ° 70% ç†±é‡ï¼›æ²’è‚‰å°±å¹³å‡åˆ†
      const proteinCalBudget = proteins.length > 0 ? mealCalories * 0.7 : 0;
      const vegCalBudget = proteins.length > 0 ? mealCalories * 0.3 : mealCalories;

      // è¨ˆç®—è‚‰é¡ä»½é‡
      proteins.forEach(p => {
        const targetCal = proteinCalBudget / proteins.length;
        const amount = Math.round((targetCal / p.calories) * 100); // å…‹æ•¸
        recipeItems.push({ ...p, amount });
        totalCa += (p.ca * amount) / 100;
        totalP += (p.p * amount) / 100;
        totalProtein += (p.protein * amount) / 100;
        totalFat += (p.fat * amount) / 100;
      });

      // è¨ˆç®—è”¬èœä»½é‡
      vegs.forEach(v => {
        const targetCal = vegCalBudget / vegs.length;
        const amount = Math.round((targetCal / v.calories) * 100);
        recipeItems.push({ ...v, amount });
        totalCa += (v.ca * amount) / 100;
        totalP += (v.p * amount) / 100;
        totalProtein += (v.protein * amount) / 100;
        totalFat += (v.fat * amount) / 100;
      });

      // æª¢æŸ¥éˆ£ç£·æ¯”
      const caPAnalysis = analyzeCaPRatio(totalCa, totalP);
      
      // ç”Ÿæˆè£œå……å“å»ºè­°
      const supplements = [];
      if (caPAnalysis.status === 'low') {
        // éœ€è£œéˆ£é‡ï¼šç›®æ¨™è®“ Ca = P * 1.2
        const targetCa = totalP * 1.2;
        const missingCa = targetCa - totalCa;
        // å‡è¨­è›‹æ®¼ç²‰ 1g ç´„å« 350mg éˆ£
        const eggShellPowder = (missingCa / 350).toFixed(1);
        supplements.push({ name: 'è›‹æ®¼ç²‰', amount: `${eggShellPowder}g`, reason: 'å¹³è¡¡éˆ£ç£·æ¯”' });
      }
      supplements.push({ name: 'é­šæ²¹', amount: '1é¡†', reason: 'è£œå…… Omega-3' });

      setRecipeResult({
        items: recipeItems,
        macros: { 
          p: Math.round(totalProtein), 
          f: Math.round(totalFat), 
          c: Math.round((mealCalories - totalProtein*4 - totalFat*9)/4) 
        },
        calories: mealCalories,
        analysis: caPAnalysis,
        supplements
      });
      
      setIsCalculating(false);
    }, 1200);
  };

  // --- UI Components ---
  const TabButton = ({ id, label, icon: Icon }) => (
    <button 
      onClick={() => setActiveTab(id)}
      className={`flex flex-col items-center p-2 rounded-xl transition duration-200 ${activeTab === id ? 'text-orange-600 bg-orange-50' : 'text-gray-400 hover:bg-gray-50'}`}
    >
      <Icon size={24} strokeWidth={activeTab === id ? 2.5 : 2} />
      <span className="text-[10px] font-medium mt-1">{label}</span>
    </button>
  );

  return (
    <div className="max-w-md mx-auto bg-gray-50 h-[100dvh] flex flex-col font-sans text-gray-800 shadow-2xl relative overflow-hidden">
      
      {/* é ‚éƒ¨å°èˆª */}
      <div className="bg-white px-5 py-4 shadow-sm z-20 flex justify-between items-center sticky top-0">
        {showSettings ? (
          <div className="flex items-center gap-2 w-full">
            <button onClick={() => setShowSettings(false)} className="p-1 hover:bg-gray-100 rounded-full">
               <ArrowLeft size={24} className="text-gray-600"/>
            </button>
            <h1 className="font-bold text-lg text-gray-800">æ¯›å­©æª”æ¡ˆè¨­å®š</h1>
          </div>
        ) : (
          <>
            <div className="flex items-center gap-2">
              <div className="w-9 h-9 bg-gradient-to-br from-orange-400 to-red-500 rounded-xl flex items-center justify-center text-white font-bold shadow-orange-200 shadow-lg">FL</div>
              <h1 className="font-bold text-xl tracking-tight text-gray-800">FurLogic</h1>
            </div>
            <button onClick={() => setShowSettings(true)} className="flex items-center gap-2 bg-gray-100 pl-3 pr-2 py-1.5 rounded-full hover:bg-gray-200 transition">
              <span className="text-sm font-bold text-gray-700">{petProfile.name}</span>
              <Settings size={16} className="text-gray-500"/>
            </button>
          </>
        )}
      </div>

      {/* ä¸»è¦å…§å®¹å€ */}
      <div className="flex-1 overflow-y-auto pb-24 scrollbar-hide">
        
        {/* --- è¨­å®šé é¢ --- */}
        {showSettings ? (
          <div className="p-6 space-y-6 animate-in slide-in-from-right duration-300">
            <div className="space-y-4">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">æ¯›å­©åå­—</label>
                <input type="text" name="name" value={petProfile.name} onChange={handleProfileUpdate} className="w-full p-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-orange-500 outline-none"/>
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">é«”é‡ (kg)</label>
                <input type="number" name="weight" value={petProfile.weight} onChange={handleProfileUpdate} className="w-full p-3 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-orange-500 outline-none"/>
              </div>
              <div className="flex items-center justify-between p-3 bg-white border border-gray-200 rounded-xl">
                <span className="text-sm font-medium text-gray-700">å·²çµç´®</span>
                <input type="checkbox" name="isNeutered" checked={petProfile.isNeutered} onChange={handleProfileUpdate} className="w-5 h-5 accent-orange-500"/>
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">æ´»å‹•é‡</label>
                <div className="grid grid-cols-3 gap-2">
                  {['low', 'normal', 'high'].map(level => (
                    <button 
                      key={level}
                      onClick={() => setPetProfile(prev => ({...prev, activityLevel: level}))}
                      className={`py-2 rounded-lg text-sm font-medium border ${petProfile.activityLevel === level ? 'bg-orange-100 border-orange-500 text-orange-700' : 'bg-white border-gray-200 text-gray-500'}`}
                    >
                      {level === 'low' ? 'æ…µæ‡¶' : level === 'normal' ? 'ä¸€èˆ¬' : 'å¥½å‹•'}
                    </button>
                  ))}
                </div>
              </div>
            </div>
            <button onClick={() => setShowSettings(false)} className="w-full py-3 bg-gray-800 text-white rounded-xl font-bold flex justify-center items-center gap-2 mt-8">
              <Save size={18} /> å„²å­˜è¨­å®š
            </button>
          </div>
        ) : (
          <>
            {/* --- åŠŸèƒ½ 1: é¦–é  (å¥åº·å„€è¡¨æ¿) --- */}
            {activeTab === 'home' && (
              <div className="p-5 space-y-6 animate-in fade-in duration-300">
                {/* ç†±é‡å¡ç‰‡ */}
                <div className="bg-gradient-to-br from-orange-500 to-red-500 text-white rounded-3xl p-6 shadow-xl relative overflow-hidden">
                  <div className="absolute top-0 right-0 opacity-10 transform translate-x-8 -translate-y-4">
                    <Activity size={140} />
                  </div>
                  <p className="text-orange-100 text-sm font-medium mb-1 flex items-center gap-1"><Activity size={14}/> æ¯æ—¥ä»£è¬èƒ½éœ€æ±‚ (DER)</p>
                  <div className="flex items-baseline gap-2">
                    <h2 className="text-5xl font-bold tracking-tight">{der}</h2>
                    <span className="text-lg opacity-80 font-medium">kcal</span>
                  </div>
                  
                  <div className="grid grid-cols-2 gap-4 mt-6 pt-4 border-t border-white/20">
                    <div>
                      <p className="text-xs text-orange-100 mb-1">RER (åŸºç¤ä»£è¬)</p>
                      <p className="font-bold text-lg">{rer} <span className="text-xs font-normal opacity-70">kcal</span></p>
                    </div>
                    <div>
                      <p className="text-xs text-orange-100 mb-1">å»ºè­°é£²æ°´é‡</p>
                      <p className="font-bold text-lg">{waterNeed} <span className="text-xs font-normal opacity-70">ml</span></p>
                    </div>
                  </div>
                </div>

                <div className="grid grid-cols-2 gap-4">
                   <div className="bg-white p-4 rounded-2xl shadow-sm border border-gray-100 flex flex-col justify-between h-32 relative overflow-hidden group hover:border-orange-200 transition cursor-pointer" onClick={() => setActiveTab('search')}>
                      <div className="absolute right-2 top-2 bg-green-100 p-2 rounded-full text-green-600 group-hover:scale-110 transition"><Search size={20}/></div>
                      <span className="text-gray-500 text-xs font-bold uppercase tracking-wider">Database</span>
                      <div>
                        <h3 className="font-bold text-lg text-gray-800">èƒ½ä¸èƒ½åƒ?</h3>
                        <p className="text-xs text-gray-400 mt-1">æŸ¥è©¢é£Ÿæå®‰å…¨ç­‰ç´š</p>
                      </div>
                   </div>
                   <div className="bg-white p-4 rounded-2xl shadow-sm border border-gray-100 flex flex-col justify-between h-32 relative overflow-hidden group hover:border-orange-200 transition cursor-pointer" onClick={() => setActiveTab('kitchen')}>
                      <div className="absolute right-2 top-2 bg-orange-100 p-2 rounded-full text-orange-600 group-hover:scale-110 transition"><ChefHat size={20}/></div>
                      <span className="text-gray-500 text-xs font-bold uppercase tracking-wider">AI Kitchen</span>
                      <div>
                        <h3 className="font-bold text-lg text-gray-800">é…é¤è¨ˆç®—</h3>
                        <p className="text-xs text-gray-400 mt-1">æ™ºæ…§é£Ÿè­œç”Ÿæˆ</p>
                      </div>
                   </div>
                </div>

                {/* è¡›æ•™å°å¡ */}
                <div className="bg-blue-50 rounded-2xl p-4 flex gap-4 border border-blue-100">
                  <div className="bg-white p-2 rounded-xl h-fit shadow-sm text-blue-500">
                    <Info size={24} />
                  </div>
                  <div>
                    <h4 className="font-bold text-blue-900 text-sm">ç‚ºä»€éº¼è¦é—œæ³¨éˆ£ç£·æ¯”ï¼Ÿ</h4>
                    <p className="text-xs text-blue-700 mt-1 leading-relaxed">
                      é•·æœŸåªåƒç´”è‚‰(é«˜ç£·)æœƒå°è‡´éˆ£è³ªæµå¤±ï¼Œå¼•ç™¼ã€Œç‡Ÿé¤Šæ€§ç¹¼ç™¼æ€§å‰¯ç”²ç‹€è…ºäº¢é€²ã€ï¼Œé€ æˆéª¨è³ªç–é¬†ã€‚è¨˜å¾—æ·»åŠ è›‹æ®¼ç²‰å–”ï¼
                    </p>
                  </div>
                </div>
              </div>
            )}

            {/* --- åŠŸèƒ½ 2: æŸ¥è©¢ (çŸ¥è­˜åº«) --- */}
            {activeTab === 'search' && (
              <div className="p-5 h-full flex flex-col animate-in fade-in duration-300">
                <h2 className="font-bold text-2xl text-gray-800 mb-4">é£ŸæçŸ¥è­˜åº«</h2>
                <div className="relative mb-4">
                  <Search className="absolute left-4 top-3.5 text-gray-400" size={18} />
                  <input 
                    type="text" 
                    placeholder="è¼¸å…¥é£Ÿæåç¨± (ä¾‹: é›è‚‰)" 
                    className="w-full bg-white border border-gray-200 rounded-2xl py-3 pl-11 pr-4 focus:outline-none focus:ring-2 focus:ring-orange-500 shadow-sm"
                    value={searchTerm}
                    onChange={(e) => setSearchTerm(e.target.value)}
                  />
                </div>

                <div className="flex-1 overflow-y-auto space-y-3 pb-20">
                  {INITIAL_DB.filter(item => item.name.includes(searchTerm)).map(item => (
                    <div key={item.id} className="bg-white rounded-2xl p-4 border border-gray-100 shadow-sm hover:shadow-md transition">
                      <div className="flex justify-between items-start">
                        <h3 className="font-bold text-lg text-gray-800">{item.name}</h3>
                        {item.safety === 'safe' && <span className="bg-green-100 text-green-700 text-xs font-bold px-2 py-1 rounded-lg flex items-center gap-1"><Check size={12}/> å®‰å…¨</span>}
                        {item.safety === 'caution' && <span className="bg-yellow-100 text-yellow-700 text-xs font-bold px-2 py-1 rounded-lg flex items-center gap-1"><AlertTriangle size={12}/> æ³¨æ„</span>}
                        {item.safety === 'toxic' && <span className="bg-red-100 text-red-700 text-xs font-bold px-2 py-1 rounded-lg flex items-center gap-1"><X size={12}/> ç¦æ­¢</span>}
                      </div>
                      <p className="text-sm text-gray-600 mt-2 mb-3">{item.desc}</p>
                      
                      {/* ç‡Ÿé¤Šå¿«è¦½ */}
                      <div className="flex gap-3 text-xs text-gray-400 mb-2">
                         <span>ğŸ”¥ {item.calories} kcal</span>
                         <span>Ca: {item.ca}mg</span>
                         <span>P: {item.p}mg</span>
                      </div>

                      {item.warning && (
                        <div className="bg-red-50 text-red-600 text-xs p-3 rounded-xl flex items-start gap-2 font-medium">
                          <AlertTriangle size={14} className="mt-0.5 shrink-0"/>
                          {item.warning}
                        </div>
                      )}
                    </div>
                  ))}
                  {INITIAL_DB.filter(item => item.name.includes(searchTerm)).length === 0 && (
                     <div className="text-center py-10 text-gray-400">
                        <p>æ‰¾ä¸åˆ°ç›¸é—œé£Ÿæ</p>
                        <p className="text-xs mt-2">è©¦è©¦çœ‹ã€Œå—ç“œã€æˆ–ã€Œå·§å…‹åŠ›ã€</p>
                     </div>
                  )}
                </div>
              </div>
            )}

            {/* --- åŠŸèƒ½ 3: å»šæˆ¿ (AI é…é¤) --- */}
            {activeTab === 'kitchen' && (
              <div className="p-5 h-full flex flex-col animate-in fade-in duration-300">
                {!recipeResult ? (
                  <>
                    <h2 className="font-bold text-2xl text-gray-800 mb-2">AI æ™ºèƒ½é…é¤</h2>
                    <p className="text-sm text-gray-500 mb-6">é»é¸å†°ç®±æœ‰çš„é£Ÿæï¼Œç³»çµ±è‡ªå‹•è¨ˆç®—å‡è¡¡é£Ÿè­œã€‚</p>
                    
                    <div className="flex-1 overflow-y-auto mb-20">
                      <div className="grid grid-cols-2 gap-3 pb-24">
                        {INITIAL_DB.filter(i => i.safety !== 'toxic').map(item => {
                          const isSelected = selectedIngredients.find(i => i.id === item.id);
                          return (
                            <div 
                              key={item.id} 
                              onClick={() => toggleIngredient(item)}
                              className={`p-4 rounded-2xl border transition cursor-pointer relative ${isSelected ? 'border-orange-500 bg-orange-50 shadow-md ring-1 ring-orange-500' : 'border-gray-200 bg-white hover:border-gray-300'}`}
                            >
                              <span className="font-bold text-gray-800">{item.name}</span>
                              <div className="flex justify-between mt-2 text-xs text-gray-500">
                                <span>{item.type === 'protein' ? 'è›‹ç™½è³ª' : 'è”¬æœ'}</span>
                                <span>{item.calories} kcal</span>
                              </div>
                              {isSelected && <div className="absolute top-2 right-2 text-orange-500"><Check size={16}/></div>}
                            </div>
                          );
                        })}
                      </div>
                    </div>

                    <div className="absolute bottom-20 left-0 w-full px-5 bg-gradient-to-t from-gray-50 via-gray-50 to-transparent pt-10 pb-5">
                       <button 
                        onClick={generateRecipe}
                        disabled={selectedIngredients.length === 0 || isCalculating}
                        className={`w-full py-4 rounded-2xl font-bold text-white shadow-lg flex justify-center items-center gap-2 transform active:scale-95 transition ${selectedIngredients.length === 0 ? 'bg-gray-300 cursor-not-allowed' : 'bg-gray-900'}`}
                      >
                        {isCalculating ? (
                          <>
                            <div className="animate-spin rounded-full h-5 w-5 border-2 border-white border-t-transparent"></div>
                            è¨ˆç®—ç‡Ÿé¤Šèˆ‡éˆ£ç£·æ¯”...
                          </>
                        ) : (
                          <>
                            <ChefHat size={20} />
                            ç”Ÿæˆ {petProfile.name} çš„å°ˆå±¬é£Ÿè­œ
                          </>
                        )}
                      </button>
                    </div>
                  </>
                ) : (
                  // é£Ÿè­œçµæœé é¢
                  <div className="h-full overflow-y-auto pb-24 animate-in slide-in-from-bottom duration-500">
                    <button onClick={() => setRecipeResult(null)} className="flex items-center gap-1 text-gray-500 font-medium mb-4 hover:text-gray-800">
                      <ChevronRight className="rotate-180" size={18}/> é‡æ–°é¸æ“‡
                    </button>
                    
                    <div className="bg-white rounded-3xl shadow-lg border border-gray-100 overflow-hidden mb-6">
                      <div className="bg-gray-900 p-6 text-white">
                        <div className="flex justify-between items-start">
                          <div>
                            <p className="text-gray-400 text-xs font-bold uppercase tracking-wider mb-1">Generated Recipe</p>
                            <h2 className="text-2xl font-bold">ç‡Ÿé¤Šå‡è¡¡é®®é£Ÿé¤</h2>
                          </div>
                          <div className="bg-gray-800 px-3 py-1 rounded-lg text-sm font-bold border border-gray-700">
                            {recipeResult.calories} kcal
                          </div>
                        </div>
                      </div>
                      
                      <div className="p-6 space-y-8">
                        
                        {/* 1. éˆ£ç£·æ¯”åˆ†æ (æ ¸å¿ƒé‚è¼¯å±•ç¤º) */}
                        <div className={`p-4 rounded-2xl border ${recipeResult.analysis.status === 'good' ? 'bg-green-50 border-green-200' : 'bg-orange-50 border-orange-200'}`}>
                          <div className="flex items-center gap-2 mb-2">
                             {recipeResult.analysis.status === 'good' ? <Check size={18} className="text-green-600"/> : <AlertTriangle size={18} className="text-orange-600"/>}
                             <h3 className={`font-bold text-sm ${recipeResult.analysis.status === 'good' ? 'text-green-800' : 'text-orange-800'}`}>
                               éˆ£ç£·æ¯”åˆ†æ (Ca:P = 1:{recipeResult.analysis.ratio})
                             </h3>
                          </div>
                          <p className="text-xs text-gray-600 leading-relaxed">
                            {recipeResult.analysis.advice}
                          </p>
                        </div>

                        {/* 2. é£Ÿææ¸…å–® */}
                        <div>
                          <h3 className="font-bold text-gray-800 mb-3 flex items-center gap-2"><Utensils size={16}/> æº–å‚™é£Ÿæ</h3>
                          <div className="space-y-3">
                            {recipeResult.items.map((item, idx) => (
                              <div key={idx} className="flex justify-between items-center py-2 border-b border-gray-50 last:border-0">
                                <span className="text-gray-700">{item.name}</span>
                                <span className="font-bold text-gray-900 bg-gray-100 px-2 py-1 rounded-md text-sm">{item.amount}g</span>
                              </div>
                            ))}
                          </div>
                        </div>

                        {/* 3. ç‡Ÿé¤Šè£œå……å“ */}
                        <div>
                           <h3 className="font-bold text-gray-800 mb-3 flex items-center gap-2"><Info size={16}/> ç‡Ÿé¤Šå¸«å»ºè­°æ·»åŠ </h3>
                           <div className="bg-blue-50 rounded-2xl p-4 space-y-3">
                              {recipeResult.supplements.map((sup, idx) => (
                                <div key={idx} className="flex justify-between items-center">
                                  <div>
                                    <span className="text-blue-900 font-bold text-sm block">{sup.name}</span>
                                    <span className="text-blue-500 text-xs">{sup.reason}</span>
                                  </div>
                                  <span className="font-bold text-blue-900">{sup.amount}</span>
                                </div>
                              ))}
                           </div>
                        </div>

                      </div>
                    </div>
                  </div>
                )}
              </div>
            )}
          </>
        )}
      </div>

      {/* åº•éƒ¨å°èˆªæ¬„ */}
      {!showSettings && (
        <div className="bg-white border-t border-gray-200 px-6 py-2 flex justify-between items-center absolute bottom-0 w-full z-30 pb-safe">
          <TabButton id="home" label="å¥åº·" icon={Activity} />
          <TabButton id="search" label="æŸ¥è©¢" icon={Search} />
          <TabButton id="kitchen" label="é…é¤" icon={ChefHat} />
        </div>
      )}
    </div>
  );
}
