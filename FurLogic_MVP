import React, { useState, useEffect, useMemo } from 'react';
import { Search, Utensils, Activity, AlertTriangle, Check, X, ChevronRight, Info, ChefHat, Settings, Save, ArrowLeft } from 'lucide-react';

// --- 1. æ ¸å¿ƒè³‡æ–™åº« (æ¨¡æ“¬å¾Œç«¯ DB) ---
// é€™è£¡åŠ å…¥äº†éˆ£(mg)èˆ‡ç£·(mg)æ•¸æ“šï¼Œé€™æ˜¯è¨ˆç®—ç‡Ÿé¤Šå‡è¡¡çš„é—œéµ
const INITIAL_DB = [
  { id: 1, name: 'é›èƒ¸è‚‰', type: 'protein', safety: 'safe', calories: 105, protein: 23, fat: 1, ca: 5, p: 200, desc: 'ä½è„‚å„ªè³ªè›‹ç™½ï¼Œé®®é£ŸåŸºåº•ã€‚', warning: null },
  { id: 2, name: 'é›è…¿è‚‰', type: 'protein', safety: 'safe', calories: 150, protein: 18, fat: 8, ca: 8, p: 180, desc: 'é©å£æ€§ä½³ï¼Œè„‚è‚ªå«é‡ç¨é«˜ã€‚', warning: null },
  { id: 3, name: 'å—ç“œ', type: 'veg', safety: 'safe', calories: 26, protein: 1, fat: 0.1, ca: 21, p: 44, desc: 'å¯Œå«çº–ç¶­ï¼Œå°è…¸èƒƒå¥½ã€‚éœ€ç…®ç†Ÿã€‚', warning: null },
  { id: 4, name: 'ç´…è˜¿è””', type: 'veg', safety: 'safe', calories: 41, protein: 0.9, fat: 0.2, ca: 33, p: 35, desc: 'å¯Œå«ç¶­ç”Ÿç´ Aï¼Œæ²¹ç‚’å¸æ”¶æ›´å¥½ã€‚', warning: null },
  { id: 5, name: 'åœ°ç“œ', type: 'veg', safety: 'safe', calories: 86, protein: 1.6, fat: 0.1, ca: 30, p: 47, desc: 'å„ªè³ªç¢³æ°´ï¼Œä½†ç†±é‡è¼ƒé«˜éœ€æ§åˆ¶ã€‚', warning: null },
  { id: 6, name: 'é®­é­š', type: 'protein', safety: 'safe', calories: 208, protein: 20, fat: 13, ca: 9, p: 200, desc: 'å¯Œå« Omega-3ï¼Œå‹™å¿…å»åˆºç…®ç†Ÿã€‚', warning: null },
  { id: 7, name: 'èŠ±æ¤°èœ', type: 'veg', safety: 'caution', calories: 34, protein: 2.8, fat: 0.4, ca: 47, p: 66, desc: 'åå­—èŠ±ç§‘ï¼Œç”²ç‹€è…ºå•é¡ŒçŠ¬å°‘åƒã€‚', warning: 'å»ºè­°æ¯æ—¥ä¸è¶…éç¸½é£Ÿé‡ 10%ï¼Œéœ€ç…®ç†Ÿ' },
  { id: 8, name: 'å·§å…‹åŠ›', type: 'snack', safety: 'toxic', calories: 546, protein: 5, fat: 30, ca: 0, p: 0, desc: 'çµ•å°ç¦æ­¢ï¼å«å¯å¯é¹¼ã€‚', warning: 'è‡´æ­»é¢¨éšªï¼šå¿ƒè‡Ÿè¡°ç«­' },
  { id: 9, name: 'è‘¡è„', type: 'fruit', safety: 'toxic', calories: 67, protein: 0.6, fat: 0.4, ca: 0, p: 0, desc: 'çµ•å°ç¦æ­¢ï¼å«æœªçŸ¥æ¯’ç´ ã€‚', warning: 'è‡´æ­»é¢¨éšªï¼šæ€¥æ€§è…è¡°ç«­' },
  { id: 10, name: 'æ´‹è”¥', type: 'veg', safety: 'toxic', calories: 40, protein: 1.1, fat: 0.1, ca: 0, p: 0, desc: 'ç ´å£ç´…è¡€çƒã€‚', warning: 'è‡´æ­»é¢¨éšªï¼šæº¶è¡€æ€§è²§è¡€' },
